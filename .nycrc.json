{
    "extends": "@istanbuljs/nyc-config-typescript",
    "check-coverage": true,
    "all": true,
    "branches": 0,
    "lines": 0,
    "functions": 0,
    "statements": 0,
    "extension": [".ts", ".tsx"],
    "include": [
        "src/errors/**",
        "src/factories/**",
        "src/strategies/**",
        "src/validators/**"
    ],
    "exclude": [
        "**/*.d.ts",
        "**/*.test.ts",
        "lib/**",
        "coverage/**",
        "**/test/**"],
    "reporter": ["html"]
}
